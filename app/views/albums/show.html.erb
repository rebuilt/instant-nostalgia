<div class="content-wrapper">
  <%= link_to "To Albums", albums_path , class: "btn btn--primary btn__inline "  %>
  <h1 class="mt-3">Title: <span> <%= @album.title  %> </span> </h1>

  <div class="photos">
    <div class="gallery">
      <% @album.photos.each do |photo|   %>
        <div class="photo-deletable">
          <%= link_to photo_path(photo) do  %>
            <%= image_tag(photo.image.variant(resize: '300x300')) if photo.image.attached? %>
          <% end %>
          <%= link_to "Remove", photo_album_path([@album, photo]), class: "btn btn--warning" , method: :delete, data: {confirm: 'Are you sure you want to remove this photo from the album?'} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
