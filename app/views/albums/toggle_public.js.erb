var button = document.getElementById("public-status-button-<%= @album.id  %>")
var output = document.getElementById("output-<%= @album.id  %>")
if(button.textContent == "Make this album public"){
  button.textContent = "Make this album private"
  output.textContent = "Public Album"
} else {
  button.textContent = "Make this album public"
  output.textContent = "Private Album"
}
