<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> <%= t('error')  %> </h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group">
    <%= image_tag(user.avatar.variant(resize: '300x300')) if user.avatar.attached? %>
  </div>

  <div class="input-group">
    <%= form.label User.human_attribute_name(:avatar), class: "input-group__label" %>
    <%= form.file_field :avatar, class: 'input-group__file' %>
  </div>

  <div class="input-group">
    <%= form.label :username, class: "input-group__label" %>
    <%= form.text_field :username, class: "input-group__field" %>
  </div>

  <div class="input-group">
    <%= form.label :first_name, class: "input-group__label" %>
    <%= form.text_field :first_name, class: "input-group__field" %>
  </div>

  <div class="input-group">
    <%= form.label :last_name, class: "input-group__label" %>
    <%= form.text_field :last_name, class: "input-group__field" %>
  </div>

  <div class="input-group">
    <%= form.label :email, class: "input-group__label" %>
    <%= form.text_field :email, class: "input-group__field" %>
  </div>

  <div class="input-group">
    <%= form.label :password, class: "input-group__label" %>
    <%= form.password_field :password, class: "input-group__field" %>
  </div>

  <div class="input-group">
    <%= form.label :password_confirmation, class: "input-group__label" %>
    <%= form.password_field :password_confirmation, class: "input-group__field" %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit'), class: "btn btn--primary" %>
  </div>
<% end %>
