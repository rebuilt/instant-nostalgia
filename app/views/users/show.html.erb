<main class="content-wrapper">
  <h1>User details</h1>
  <p id="notice"><%= notice %></p>

  <div class="input-group">
    <%= image_tag(@user.avatar.variant(resize: '300x300')) if @user.avatar.attached? %>
  </div>

  <div class="row mt-5">
    <h2 class="mr-3 ">Username:</h2>
    <%= @user.username %>
  </div>

  <div class="row mt-4">
    <h2 class="mr-3">First name:</h2>
    <%= @user.first_name %>
  </div>

  <div class="row mt-4">
    <h2 class="mr-3">Last name:</h2>
    <%= @user.last_name %>
  </div>

  <div class="row mt-4">
    <h2 class="mr-3">Email:</h2>
    <%= @user.email %>
  </div>

  <%= link_to 'Edit', edit_user_path(@user), class: "btn btn--primary max-content mt-5" %>
</main>
