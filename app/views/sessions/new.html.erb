<main class="content-wrapper">
  <section class="envelope">
    <h1 class="gamma"> <%= t('login')  %> </h1>

    <% if(flash.any?)  %>
      <div class="container message-container">
        <% flash.each do |name, message|  %>
          <div class="message <%= name  %> "> <%= message  %> </div>
        <% end %>
      </div>
    <% end %>

    <%= form_tag( sessions_path) do %>
      <div class="input-group">
        <%= label(:email, User.human_attribute_name(:email), class: "input-group__label" )  %>
        <%= text_field_tag(:email,nil, class: 'input-group__field', placeholder: "e.g. me@epfl.ch"  )%>
      </div>
      <div class="input-group">
        <%= label(:password, User.human_attribute_name(:password), class: "input-group__label" )  %>
        <%= password_field_tag(:password, nil, class: 'input-group__field')%>
      </div>
      <div class="prompt">
        <%= submit_tag(t('login'), class: "btn btn--primary prompt__confirm" )  %>
      </div>
    <% end %>
  </section>
</main>
