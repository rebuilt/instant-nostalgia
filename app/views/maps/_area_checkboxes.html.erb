<button type="button" class="collapsible" data-target="collapsible.button" data-action="click->collapsible#toggle">Open <%= name.pluralize.capitalize %> </button>
<div id="<%= name.tr(" ", "-")  %>" class="filter-panel ml-4" >
  <% area.each do |a|   %>
    <div class="row mt-3 end">
      <%= form.label(a, a)  %>
      <%= form.check_box("#{name}[#{a}]", value: a)  %>
    </div>
  <% end %>
</div>
