var comment = {
  id: "id-<%= @comment.id %>",
  avatar_url: "<%= asset_path('avatar.png') %>",
  created_at: "<%= @comment.created_at %>",
  time_ago: "Posted <%= time_ago_in_words @comment.created_at %> ago",
  body: "<%= @comment.body.to_plain_text.gsub("\n","\\n") %>",
  first_name: "<%= @comment.user.first_name %>",
  comment_url: "<%= "/#{I18n.locale}/#{@commentable.class.to_s.downcase}s/#{@commentable.id}/comments/#{@comment.id}" %>",
  authenticity_token: '<%= form_authenticity_token %>',
  count: "<%= @count  %>"
};
Comments.addComment(comment);
Helpers.clearInput('comment_body');
Comments.updateCommentCount(comment.count, 'comment-count-1');
Comments.updateCommentCount(comment.count, 'comment-count-2');
