<div class="content-wrapper" >
  <h1>Upload Photos</h1>

  <%  if @photo.errors.any?  %>
    <div class="error_explanations">
      <h2> <%= pluralize(@photo.errors.count, "error")%> prohibited this photo from being saved   </h2>
    </div>
    <ul>
      <%= @photo.errors.full_messages.each do |message|  %>
        <li> <%= message  %> </li>
      <% end %>
    </ul>
  <% end %>

  <p>You can upload 100 more photos</p>
  <p>Drag and drop photos here</p>
  <p>or</p>

  <%= form_with(model: @photo, class: "mt-3", local: true) do |form|  %>
    <div>
      <%= form.file_field :image, class: 'input-group__file' %>
    </div>
    <div class="mt-3">
      <%= form.submit class: 'btn btn--primary' %>
    </div>
  <% end %>

</div>
