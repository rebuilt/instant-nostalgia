<main class="content-wrapper">
  <h1> <%= t('.upload_title')  %> </h1>

  <%= render(partial: "error_messages", locals: {model: @photo})  %>
  <p> <%= "#{t('.description_start')} #{@uploads_remaining} #{t('.description_end')}"  %> </p>
  <% if(@uploads_remaining > 0 )  %>
    <p> <%= t('.instructions')  %> </p>
    <p> <%= t('.or')  %> </p>

  <%= form_with(model: @photo, class: "mt-3", local: true) do |form|  %>
      <%= form.file_field :image, class: 'input-group__file' %>
      <%= form.submit t('.upload_title'), class: 'btn btn--primary' %>
  <% end %>
<% end %>
</main>
