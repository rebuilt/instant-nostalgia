<!DOCTYPE html>
<html>
  <head>
    <title>CapstoneProjectWadC5S4750</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

     <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDOKYnV1ICIa4zYFItn5WS9pXN2I6ECRXw&callback=initMap&libraries=&v=weekly" defer ></script>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <%= link_to "Instant Nostalgia", root_path, class: "navbar-brand"  %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <%= link_to t('map'), photos_path, class: "nav-link active"  %>
              </li>
              <li class="nav-item">
                <%= link_to t('upload'), new_photo_path, class: "nav-link"  %>
              </li>
              <li class="nav-item">
                <%= link_to t('sign_up'), new_user_path , class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to t('login'), new_session_path , class: "nav-link" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <% I18n.available_locales.each do |locale| %>
      <%= link_to locale, url_for(locale: locale) %>
    <% end %>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
  </body>
</html>
