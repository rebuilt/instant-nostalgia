<!DOCTYPE html>
<html>
  <head>
    <title>CapstoneProjectWadC5S4750</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'albums'  %>
    <%= javascript_pack_tag 'comments'  %>
    <%= javascript_pack_tag 'shares'  %>
    <%= javascript_pack_tag 'photos'  %>
    <%= javascript_pack_tag 'helpers'  %>
    <%= javascript_pack_tag 'direct_uploads'  %>
  </head>

  <body>
    <header>
      <% if logged_in?  %>
        <%= render(partial: "authenticated_user_header") %>
      <% else  %>
        <%= render(partial: "anonymous_user_header") %>
      <% end %>
      <label for="nav-toggle" class="nav-toggle-label">
        <span></span>
      </label>
    </header>

    <%= yield %>

    <footer>
      <div class="content-wrapper mt-3">
        <%= t('language')  %>:   <%= select("language", "code", I18n.available_locales.collect {|country_code| [ country_code , url_for(locale: country_code)]}, include_blank: true ) %>
      </div>
    </footer>

    <script>
      document.getElementById("language_code").onchange = function() {
        if (this.selectedIndex!==0) {
          window.location.href = this.value;
        }
      };
    </script>
  </body>
</html>
