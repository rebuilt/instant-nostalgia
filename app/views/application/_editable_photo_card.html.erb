<div id="id-<%= photo.id  %>" class="photo-deletable">
  <div data-controller="modal" data-modal-id="<%= photo.id  %>" data-modal-url="<%= url_for(photo.image)  %>" data-action="click->modal#showModal">
    <%= image_tag(photo.image.variant(resize: '300x300')) if photo.image.attached? %>
  </div>

  <div class="row mt-3">
    <%= link_to "Show details", photo_path(photo), class: "btn btn--primary " %>
    <%= link_to "Delete", photo_path(photo), method: :delete, class: "btn btn--warning " , data: {confirm: 'Are you sure you want to delete this photo?'}, remote: true %>
  </div>
</div>
