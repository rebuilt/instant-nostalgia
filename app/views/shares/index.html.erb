<h1>Albums I am sharing</h1>
<ul>
  <% @shared_by_me.each do |share|  %>
    <li>
      <p>
      <%= share.album.title  %> 
      <%= link_to(new_share_path(album_id: share.album.id)) do  %> 
        Share with another user
        <%= hidden_field_tag("album_id", share.album.id)  %> 
      <% end %>
    </p>
    </li>
  <% end %>
</ul>

<h1>Albums shared with me</h1>

<ul>
  <% @shared_with_me.each do |share|  %>
    <li>
      <p>
      <%= share.album.title  %> 
      <%= link_to("View", album_path(share.album) )  %>
      </p>
    </li>
  <% end %>
</ul>
