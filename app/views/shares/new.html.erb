<h1>Shares#new</h1>
<h2> 
  Album title: <%= @album.title  %>
</h2>
<p>Who would you like to share <%= @album.title  %> with?</p>

<div>
  <div class="find-user">
    <%= form_with(url: new_share_path , method: :get, local: :true) do |form| %>
      <div class="field">
        <%= form.label :search %>
        <%= form.text_field :search %>
      </div>
      <%= hidden_field_tag "album_id", @album.id %>
      <div class="actions">
        <%= form.submit("Search for User") %>
      </div>
    <% end %>
  </div>

  <div id="results" class="results" >
    <p> You searched for: <%= @term  %></p>
    <% if(@users.present?)%>
      <% @users.each do |user|  %> 
        <%= form_with(url: shares_path) do |form| %>
          <p> <%= user.username %> </p>
          <p> <%= user.email  %> </p>
          <%= hidden_field_tag "user_id", user.id %>
          <%= hidden_field_tag "album_id", @album.id %>
          <%= form.submit("Share #{@album.title} with #{user.username}") %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

