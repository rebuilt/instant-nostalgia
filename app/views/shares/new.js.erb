var term = "<%= @term  %>" ;
var locale = "<%= I18n.locale  %>"
var album = {
  'id':  "<%= @album.id  %>",
  'title': "<%= @album.title  %>"
}

var users = [];
<% @users.each do |user|   %>
    var user = {
      'username': "<%= user.username  %>",
      'email': "<%= user.email  %>",
      'id': "<%= user.id  %>"
    };
users.push(user);
<% end %>

Shares.clearResultsDiv();
Helpers.clearInput('search');
Shares.addTermDiv(term);
Shares.addHeaderDiv();
Shares.addResults(users, album, locale);
